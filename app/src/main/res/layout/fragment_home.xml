<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arbaelbarca.loginfirebaseemail.ui.fragment.HomeFragment">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />


    <RelativeLayout
        android:id="@+id/rlSaldoku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_account_tosca">

        <android.support.v7.widget.CardView
            android:id="@+id/cardSaldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_15sdp"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_6sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Saldoku"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/txtMySaldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Rp 50.000"
                        android:textColor="@color/black_pekat"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/txtNoSaldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Nomor Saldoku : 09988299389"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnTopup"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/bg_red"
                    android:gravity="center"
                    android:text="Topup"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/_10sdp" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlSaldoku"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_6sdp"
            android:text="Pilih Layanan Jasa"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/_14sdp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvListJasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnAddJasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_15sdp"
        android:src="@drawable/ic_add_black_24dp"
        android:visibility="gone"
        app:maxImageSize="@dimen/_25sdp" />

</RelativeLayout>
