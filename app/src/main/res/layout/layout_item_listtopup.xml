<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_3sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_5sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgUserTopup"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/ic_user_no_photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toEndOf="@id/imgUserTopup"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUsernameTopup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arbaelbarca"
                android:textColor="@color/black_pekat"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/txtRequesTopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Permintaan saldo : 50000" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtStatusTopup"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:background="@drawable/bg_red_rounded"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            tools:text="Sudah disi" />

    </RelativeLayout>
</android.support.v7.widget.CardView>